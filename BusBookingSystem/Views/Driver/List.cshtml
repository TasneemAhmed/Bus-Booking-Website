@model IEnumerable<BusBookingSystem.Models.Driver>

@{
    ViewBag.Title = "Drivers List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<p>
    @using (Html.BeginForm("List", "Driver", FormMethod.Get))
    {
        <b>Search</b> @Html.RadioButton("searchBy", "Name") <text>Name</text>
        @Html.RadioButton("searchBy", "Address") <text>Address</text>
        @Html.RadioButton("searchBy", "Email") <text>Email</text><br />

        @Html.TextBox("search") <input type="submit" value="search" class="btn btn-default" />
    }
</p>
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">
            No drivers match search criteria
        </td>
    </tr>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Driver Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
<div>
    @Html.ActionLink("Back to List", "List")
</div>
