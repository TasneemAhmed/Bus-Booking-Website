@model IEnumerable<BusBookingSystem.Models.User>

@{
    ViewBag.Title = "Users List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("List", "User", FormMethod.Get))
    {
        <b>Search</b> @Html.RadioButton("searchBy", "Name") <text>Name</text>
        @Html.RadioButton("searchBy", "Email") <text>Email</text><br />

        @Html.TextBox("search") <input type="submit" value="search" class="btn btn-default" />
    }
</p>
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">
            No users match search criteria
        </td>
    </tr>
}
else
{


    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.EMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.EMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>
